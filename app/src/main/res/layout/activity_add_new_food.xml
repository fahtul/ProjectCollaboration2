<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".AddNewFood">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:background="@color/colorPrimary"
                android:id="@+id/fotoMakanan"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="10dp"
                android:backgroundTint="#00ffffff"
                android:id="@+id/fabImage"
                app:srcCompat="@drawable/ic_add_photo"/>

        </RelativeLayout>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtNamaMakanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Nama Makanan"
            android:textColorHint="#000000"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:inputType="text"
            app:met_baseColor="#000000"
            app:met_floatingLabel="highlight"

            app:met_primaryColor="@color/colorPrimary"
            app:met_singleLineEllipsis="true"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtHarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Harga"
            android:textColorHint="#000000"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:inputType="number"
            app:met_baseColor="#000000"
            app:met_floatingLabel="highlight"

            app:met_primaryColor="@color/colorPrimary"
            app:met_singleLineEllipsis="true"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtBerat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Berat"
            android:textColorHint="#000000"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:inputType="number"
            app:met_baseColor="#000000"
            app:met_floatingLabel="highlight"

            app:met_primaryColor="@color/colorPrimary"
            app:met_singleLineEllipsis="true"/>

        <Spinner
            android:id="@+id/spinnerKategori"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Deskripsi"
            android:textColorHint="#000000"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:inputType="text"
            app:met_baseColor="#000000"
            app:met_floatingLabel="highlight"

            app:met_primaryColor="@color/colorPrimary"
            app:met_singleLineEllipsis="true"/>


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edtStok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Stok"
            android:textColorHint="#000000"
            android:text=""
            android:textColor="@color/colorPrimary"
            android:inputType="number"
            app:met_baseColor="#000000"
            app:met_floatingLabel="highlight"

            app:met_primaryColor="@color/colorPrimary"
            app:met_singleLineEllipsis="true"/>

        <Button
            android:id="@+id/btnAddMakanan"
            android:text="Tambah Makanan"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="16dp"
            android:shadowColor="@android:color/black"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

    </LinearLayout>


</ScrollView>